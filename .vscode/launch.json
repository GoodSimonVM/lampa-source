  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Lampa debug",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "gulp-debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "stopOnEntry": false,
      "args": ["debug"],
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "gulp-default",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "stopOnEntry": false,
      "args": [],
      "runtimeArgs": ["--nolazy"]
    }
  ]
}
